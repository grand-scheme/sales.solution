@{
  Layout = "_Layout";
}

@using Sales.Models;

<h1> 
  Your Vendors 
</h1>

<ol>
  @if (@Model.Count == 0)
  {
    <p>
      No vendors have been added to your index.
    </p>
  }

  @foreach (Vendor vendor in Model)
  {
    <li>
      <a href="/vendors/@vendor.Id">
        @vendor.Name
      </a><br />
      
      @vendor.Description<br />
      @vendor.Name receives their deliveries on @vendor.Date
    </li>
  }
</ol>

@await Html.PartialAsync("NavHome")