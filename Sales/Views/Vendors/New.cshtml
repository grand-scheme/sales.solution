@{
  Layout = "_Layout";
}

<h1>
  Add Vendor to Index
</h1>

<form action="/vendors" method="post" class="form-group inputContainer">
  <label for="vendorName">Name of Vendor:</label>
  <input id="vendorName" name="vendorName" type="text"><br />
  <label for="vendorDescription">Short Description:</label>
  <input id="vendorDescription" name="vendorDescription" type="text"><br />
  <label for="vendorDate">Day of Delivery:</label>
  <input id="vendorDate" name="vendorDate" type="text"><br />
    <button type="submit" class="btn-dark round-it">Add Vendor</button>
</form>

<div class="footer">
<a href="/">Back home</a> & <a href="/vendors">Back to vendors</a>
</div>